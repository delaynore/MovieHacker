<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="HeaderBar">
        <Setter Property="Control.Background" Value="{StaticResource DarkBlueBrush}"/>
    </Style>
    <Style TargetType="Button" x:Key="ButtonOnHeader" BasedOn="{StaticResource HeaderBar}">
        <Setter Property="FontFamily" Value="{StaticResource BaseFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Big}"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,5,20,5"/>
        <Setter Property="Template" Value="{DynamicResource NavBarButton}"/>
    </Style>
    
</ResourceDictionary>