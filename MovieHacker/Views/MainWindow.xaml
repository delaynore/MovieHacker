<Window x:Class="MovieHacker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieHacker.Views"
        mc:Ignorable="d"
        Title="МувиХакер" Height="450" Width="850"
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--<ControlTemplate TargetType="Button" x:Key="HeaderButtonT">
            <TextBlock Text="{TemplateBinding Content}"></TextBlock>
        </ControlTemplate>-->
        <Style TargetType="Button" x:Key="HeaderButtonS">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="15,5,15,5"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="Background" Value="#b2bec3"/>
            <Setter Property="BorderThickness" Value="0"/>

            <EventSetter Event="Click" Handler="Button_Click"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridNav"  Grid.Row="0" Background="#b2bec3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="navbtnSessions" Style="{StaticResource HeaderButtonS}" Tag="Sessions" Content="Сеансы"/>
                <Button x:Name="navbtnMovies" Style="{StaticResource HeaderButtonS}" Tag="Movies" Content="Фильмы"/>
                <Button x:Name="navbtnGenres" Style="{StaticResource HeaderButtonS}" Tag="Genres" Content="Жанры"/>
                <Button x:Name="navbtnCinema" Style="{StaticResource HeaderButtonS}" Tag="Cinema" Content="Кинотеатры"/>
                <Button x:Name="navbtnAdmin" Style="{StaticResource HeaderButtonS}" Tag="Admin" Content="Администрирование"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="mainFrame1" NavigationUIVisibility="Hidden" Padding="10">
                
            </Frame>
        </Grid>
    

    </Grid>
</Window>
